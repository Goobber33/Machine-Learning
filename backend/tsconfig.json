{
    "compilerOptions": {
        "target": "es6",                        
        "module": "commonjs",                   
        "outDir": "./dist",                     
        "strict": true,                         
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,  
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
